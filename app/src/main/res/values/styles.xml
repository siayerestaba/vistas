<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/codely_azul</item>
        <item name="colorPrimaryDark">@color/codely_azul</item>
        <item name="colorAccent">@color/codely_green</item>
    </style>

    <style name="title">
        <item name="android:textSize">@dimen/text_20sp</item>
        <item name="android:textColor">@color/codely_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/margin_10dp</item>
    </style>

    <style name="title.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title.azul">
        <item name="android:textColor">@color/codely_azul</item>
    </style>

    <style name="title.subtitle">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_list">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_list.test">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_10dp</item>
    </style>

    <style name="text_list.subtitle">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">@dimen/margin_10dp</item>
        <item name="android:paddingLeft">@dimen/margin_10dp</item>
        <item name="android:paddingRight">@dimen/margin_10dp</item>
    </style>

    <style name="button_codely">
        <item name="android:background">@color/codely_azul</item>
        <item name="android:textColor">@color/codely_green</item>
    </style>

    <style name="textarea">
        <item name="android:gravity">top</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
    </style>
</resources>
